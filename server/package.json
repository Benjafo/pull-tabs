{
    "name": "pull-tabs-server",
    "version": "1.0.0",
    "description": "Backend server for Pull Tabs game simulator",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "typecheck": "tsc --noEmit",
        "test": "NODE_ENV=test jest --runInBand --coverage",
        "test:watch": "NODE_ENV=test jest --watch"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "cookie-parser": "^1.4.6",
        "sequelize": "^6.35.0",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/cookie-parser": "^1.4.6",
        "@types/jest": "^29.5.11",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.55.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.2",
        "tsx": "^4.6.1"
    }
}
